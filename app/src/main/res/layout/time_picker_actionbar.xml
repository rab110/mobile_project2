<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorHeader"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:id="@+id/back"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:gravity="center"
                >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_arrow_back_ios_black_24"
                android:backgroundTint="@color/colorMain"
                />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="اضافة"
                android:textColor="@color/colorWeakBlack"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                />

            <LinearLayout
                android:id="@+id/delete"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/add"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_delete_outline_black_24"
                android:backgroundTint="@color/colorMain"
                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:gravity="center"
                >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_done_black_24"
                android:backgroundTint="@color/colorMain"
                />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"
            ></LinearLayout>
    </LinearLayout>


</merge>